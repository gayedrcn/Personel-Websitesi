@model PersonelMVCUI.Models.EntityFreamework.Kullanici
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    
    <div class="container">
        <h2>Lutfen giris yapiniz</h2>
        @ViewBag.Mesaj
        @using (Html.BeginForm("Login","Security",FormMethod.Post))
        {
         <div class="form-group">
             @Html.LabelFor(m => m.Ad)
             @Html.TextBoxFor(m => m.Ad, new { @class = "form-control", placeholder = "Kullanici Adi" })
            
      </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Sifre)
            @Html.PasswordFor(m => m.Sifre, new { @class = "form-control", placeholder = "Parola" })
       
    </div>
        <button type="submit" class="btn btn-block btn-success">Giris Yap</button>
        }
        </div>
                </body>
</html>
